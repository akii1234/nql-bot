# AI Provider Configuration (choose one)
# Option 1: OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# AI Provider Selection
AI_PROVIDER=gemini  # Options: openai, gemini

# Database Configuration
# For SQLite: sqlite:///./data/movies.db
# For PostgreSQL: postgresql://username:password@localhost:5432/database_name
# For MySQL: mysql://username:password@localhost:3306/database_name
DATABASE_URL=sqlite:///./data/movies.db

# Production Database Settings
USE_PRODUCTION_DB=false  # Set to true if using existing production database
SCHEMA_TYPE=default      # Options: default, alternative, custom

# Application Configuration
APP_NAME=NQL Movie Chatbot
APP_VERSION=0.1.0
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
