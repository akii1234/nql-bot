# Production Environment Configuration
# Copy this file to .env and update with your production settings

# AI Provider Configuration
AI_PROVIDER=openai  # or gemini
OPENAI_API_KEY=your_production_openai_key
GEMINI_API_KEY=your_production_gemini_key

# Production Database Configuration
# PostgreSQL Example
DATABASE_URL=postgresql://username:password@localhost:5432/movie_database

# MySQL Example
# DATABASE_URL=mysql://username:password@localhost:3306/movie_database

# SQLite Example (for testing)
# DATABASE_URL=sqlite:///path/to/your/movies.db

# Production Database Settings
USE_PRODUCTION_DB=true
SCHEMA_TYPE=default  # Options: default, alternative, custom

# Application Configuration
APP_NAME=NQL Movie Chatbot Production
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
